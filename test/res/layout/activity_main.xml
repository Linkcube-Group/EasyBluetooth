<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/find_device_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="发现设备：" />

        <TextView
            android:id="@+id/bond_device_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="绑定设备：" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/find_device_lv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>

        <ListView
            android:id="@+id/bond_device_lv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/bluetooth_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/hello_world" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/open_bluetooth_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开蓝牙" />

        <Button
            android:id="@+id/close_bluetoth_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/open_bluetooth_btn"
            android:text="关闭蓝牙" />

        <Button
            android:id="@+id/start_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_bluetooth_btn"
            android:text="开始扫描" />

        <Button
            android:id="@+id/stop_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/start_search_btn"
            android:layout_toRightOf="@id/start_search_btn"
            android:text="停止扫描" />

        <Button
            android:id="@+id/discovery_device_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_search_btn"
            android:text="发现设备"
            android:visibility="gone" />

        <Button
            android:id="@+id/bond_device_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/discovery_device_btn"
            android:layout_toRightOf="@id/discovery_device_btn"
            android:text="绑定设备"
            android:visibility="gone" />

        <Button
            android:id="@+id/connect_device_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/discovery_device_btn"
            android:layout_toRightOf="@id/bond_device_btn"
            android:text="连接设备"
            android:visibility="gone" />

        <Button
            android:id="@+id/start_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discovery_device_btn"
            android:text="开始打印log"
            android:visibility="gone" />

        <Button
            android:id="@+id/stop_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/start_log"
            android:layout_toRightOf="@id/start_log"
            android:text="停止打印log"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/toy_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="玩具状态" />

</LinearLayout>